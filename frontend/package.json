{
  "name": "scripturai",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "start": "npx expo start --clear --tunnel",
    "start:prod": "npx expo start --no-dev --minify --clear --tunnel",
    "lint": "npx expo lint",
    "lint:fix": "npx expo lint --fix",
    "install:check": "npx expo install --check",
    "install:fix": "npx expo install --fix",
    "export": "npx expo export",
    "export:clear": "npx expo export --clear",
    "env-local:generate": "bash scripts/generate-env.sh",
    "env-remote:list": "eas env:list --include-sensitive",
    "ios:preview": "eas build --platform ios --profile preview",
    "ios:production": "eas build --platform ios --profile production",
    "ios:submit": "eas submit --platform ios",
    "android:preview": "eas build --platform android --profile preview",
    "android:production": "eas build --platform android --profile production",
    "android:submit": "eas submit --platform android"
  },
  "dependencies": {
